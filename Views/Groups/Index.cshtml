@model List<Group>
@{
    ViewData["Title"] = "Groups";
}
<link rel="stylesheet" href="~/css/groups.css" />

<div class="card">
    <div class="card-header groups-header">
        <h2><i class="fas fa-layer-group"></i> Groups</h2>
        <a href="@Url.Action("Create", "Groups")" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Create New Group</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Gender Restriction</th>
                        <th>Members Count</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var group in Model)
                    {
                        <tr>
                            <td><strong>@group.Name</strong></td>
                            <td>@group.Type</td>
                            <td>@(group.GenderRestriction?.ToString() ?? "Any")</td>
                            <td>@group.Members.Count</td>
                            <td>@(group.Description ?? "N/A")</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="@Url.Action("Edit", "Groups", new { id = group.Id })" class="btn btn-sm btn-warning">Edit</a>
                                    <form asp-action="Delete" method="post" class="groups-delete-form" onsubmit="return confirm('Are you sure you want to delete this group? This will affect all members assigned to it.');">
                                        <input type="hidden" name="id" value="@group.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center groups-empty-message">
            <p>No groups found. Create one to get started!</p>
        </div>
    }
</div>

