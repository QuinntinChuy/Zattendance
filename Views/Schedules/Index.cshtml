@model List<Schedule>
@{
    ViewData["Title"] = "Schedules";
}
<link rel="stylesheet" href="~/css/schedules.css" />

<div class="card">
    <div class="card-header schedules-header">
        <h2><i class="fas fa-calendar-alt"></i> Schedules</h2>
        <a href="@Url.Action("Create", "Schedules")" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Create New Schedule</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Group</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var schedule in Model)
                    {
                        <tr>
                            <td><strong>@schedule.Title</strong></td>
                            <td>@schedule.Date.ToString("MMMM dd, yyyy")</td>
                            <td>@(schedule.Group?.Name ?? "All Groups")</td>
                            <td>@(schedule.Description ?? "N/A")</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="@Url.Action("Edit", "Schedules", new { id = schedule.Id })" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Edit</a>
                                    <form asp-action="Delete" method="post" class="schedules-delete-form" onsubmit="return confirm('Are you sure you want to delete this schedule?');">
                                        <input type="hidden" name="id" value="@schedule.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center schedules-empty-message">
            <p>No schedules found. Create one to get started!</p>
        </div>
    }
</div>

