@{
    ViewData["Title"] = "Home";
}
<link rel="stylesheet" href="~/css/home.css" />

<div class="card">
    <div class="card-header">
        <h2>Welcome to Church Attendance System</h2>
    </div>
    <div>
        <p class="home-welcome-text">
            Welcome to the Church of God World Mission Society attendance management system.
        </p>

        <div class="home-cards-grid">
            <div class="home-card">
                <div class="home-card-icon">
                    <i class="fas fa-clipboard-check"></i>
                </div>
                <h3>Attendance</h3>
                <p>Mark and manage member attendance for church services.</p>
                <a href="@Url.Action("Index", "Attendance")" class="btn btn-primary"><i class="fas fa-eye"></i> View Attendance</a>
            </div>

            <div class="home-card">
                <div class="home-card-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h3>Members</h3>
                <p>View and manage church members.</p>
                <a href="@Url.Action("Index", "Members")" class="btn btn-primary"><i class="fas fa-eye"></i> View Members</a>
            </div>

            @if (User.IsInRole("Administrator"))
            {
                <div class="home-card">
                    <div class="home-card-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <h3>Schedules</h3>
                    <p>Create and manage church service schedules.</p>
                    <a href="@Url.Action("Index", "Schedules")" class="btn btn-primary"><i class="fas fa-cog"></i> Manage Schedules</a>
                </div>

                <div class="home-card">
                    <div class="home-card-icon">
                        <i class="fas fa-layer-group"></i>
                    </div>
                    <h3>Groups</h3>
                    <p>Manage small groups and categories.</p>
                    <a href="@Url.Action("Index", "Groups")" class="btn btn-primary"><i class="fas fa-cog"></i> Manage Groups</a>
                </div>
            }
        </div>
    </div>
</div>

