@model RegisterUserViewModel
@{
    ViewData["Title"] = "Register User";
}
<link rel="stylesheet" href="~/css/members.css" />
<link rel="stylesheet" href="~/css/modal.css" />

<div class="card">
    <div class="card-header">
        <h2><i class="fas fa-user-plus"></i> Register New User</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="RegisterUser" method="post">
        <div class="form-group">
            <label asp-for="UserName">Username *</label>
            <input asp-for="UserName" class="form-control" required />
            <span asp-validation-for="UserName" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullName">Full Name *</label>
            <input asp-for="FullName" class="form-control" required />
            <span asp-validation-for="FullName" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email *</label>
            <input asp-for="Email" type="email" class="form-control" required />
            <span asp-validation-for="Email" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password *</label>
            <input asp-for="Password" type="password" class="form-control" required minlength="6" />
            <span asp-validation-for="Password" class="validation-error"></span>
            <small class="form-text text-muted">Minimum 6 characters</small>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password *</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" required />
            <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Role">Role *</label>
            <select asp-for="Role" class="form-control" required>
                <option value="User">User</option>
                <option value="Administrator">Administrator</option>
            </select>
            <span asp-validation-for="Role" class="validation-error"></span>
        </div>

        <div asp-validation-summary="All" class="alert alert-danger"></div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary"><i class="fas fa-user-plus"></i> Register User</button>
            <a href="@Url.Action("Index", "Members")" class="btn cancel-btn"><i class="fas fa-times"></i> Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Password confirmation validation
        document.querySelector('form').addEventListener('submit', function(e) {
            var password = document.getElementById('Password').value;
            var confirmPassword = document.getElementById('ConfirmPassword').value;
            
            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Passwords do not match!');
                return false;
            }
        });
    </script>
}

