@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - The World Mission Society Church of God</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-icon">
                    <i class="fas fa-place-of-worship"></i>
                </div>
                <h1>The World Mission Society</h1>
                <p>Church of God</p>
                <p class="subtitle">Attendance System</p>
            </div>

            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Username">Username</label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" required />
                    <span asp-validation-for="Username" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required />
                    <span asp-validation-for="Password" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label class="remember-me-label">
                        <input asp-for="RememberMe" type="checkbox" />
                        Remember me
                    </label>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <ul class="error-list">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <button type="submit" class="btn btn-primary login-btn-full"><i class="fas fa-sign-in-alt"></i> Login</button>
            </form>

            <div class="login-footer">
                <p><strong>Default Login:</strong></p>
                <p><strong>Administrator:</strong> admin / Admin123!</p>
                <p><strong>User:</strong> user / User123!</p>
            </div>
        </div>
    </div>
</body>
</html>

